<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/historyRel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_small">

    <ImageView
        android:id="@+id/imgHistoryProduct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/spacing_small" />

    <TextView
        android:id="@+id/titleHistory"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/imgHistoryProduct"
        android:layout_toEndOf="@id/imgHistoryProduct"
        android:layout_toLeftOf="@+id/iconShareHistory"
        android:layout_toRightOf="@id/imgHistoryProduct"
        android:layout_toStartOf="@+id/iconShareHistory"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/brandsHistory"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/titleHistory"
        android:layout_alignStart="@id/titleHistory"
        android:layout_below="@id/titleHistory"
        android:layout_toEndOf="@id/imgHistoryProduct"
        android:layout_toLeftOf="@+id/iconShareHistory"
        android:layout_toRightOf="@id/imgHistoryProduct"
        android:layout_toStartOf="@+id/iconShareHistory"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:textSize="@dimen/font_small" />


    <openfoodfacts.github.scrachx.openfood.utils.CustomTextView
        android:id="@+id/barcodeHistory"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/brandsHistory"
        android:layout_alignStart="@id/brandsHistory"
        android:layout_below="@id/brandsHistory"
        android:layout_toEndOf="@id/imgHistoryProduct"
        android:layout_toLeftOf="@+id/iconShareHistory"
        android:layout_toRightOf="@id/imgHistoryProduct"
        android:layout_toStartOf="@+id/iconShareHistory"
        app:drawableLeftCompat="@drawable/barcode_grey_24dp"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:textSize="@dimen/font_small" />


    <openfoodfacts.github.scrachx.openfood.utils.CustomTextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/barcodeHistory"
        android:layout_alignStart="@id/barcodeHistory"
        android:layout_below="@id/barcodeHistory"
        android:layout_toEndOf="@id/imgHistoryProduct"
        android:layout_toLeftOf="@+id/iconShareHistory"
        android:layout_toRightOf="@id/imgHistoryProduct"
        android:layout_toStartOf="@+id/iconShareHistory"
        app:drawableLeftCompat="@drawable/ic_history_grey_24dp"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:textSize="@dimen/font_small" />


    <ImageButton
        android:id="@+id/iconShareHistory"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/spacing_small"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_share_black_48px" />

</RelativeLayout>

