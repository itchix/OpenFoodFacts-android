<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_welcome_intro"
    android:gravity="center">

    <ImageView
        android:id="@+id/slide_1_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_barcode"
        android:contentDescription="@string/barcode"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/slide_1_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/slide_1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="@string/title_welcome_intro"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/slide_title_dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/slide_1_desc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide_1_image" />

    <TextView
        android:id="@+id/slide_1_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:text="@string/msg_welcome_intro"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/slide_desc_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide_1_title" />

</androidx.constraintlayout.widget.ConstraintLayout>