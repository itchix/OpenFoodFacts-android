<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonFlat">
        <item name="android:background">@color/brand_blue</item>
        <item name="android:shadowColor">@color/blue_500</item>

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_50</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>

    </style>

    <style name="ButtonRounded" parent="ButtonFlat">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="ButtonBorder" parent="ButtonRounded">
        <item name="android:background">@drawable/border_button_shape</item>
        <item name="android:shadowColor">@color/grey_50</item>
        <item name="android:textColor">@color/button_link</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_tiny</item>
        <item name="android:paddingBottom">@dimen/spacing_tiny</item>
    </style>

    <style name="ButtonFlat.Success">
        <item name="android:background">@color/brand_green_dark</item>
    </style>
</resources>